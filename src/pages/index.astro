<style is:global>
  /* Variables de color elegantes */
  :root {
    --gold: #FFD700;
    --gold-light: #FFE55C;
    --gold-dark: #E6C200;
    --bronze: #CD7F32;
    --copper: #B87333;
    --dark: #0A0A0A;
    --dark-gray: #1A1A1A;
    --light: #FAFAFA;
    --gray: #666666;
    --white: #FFFFFF;
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Reset elegante */
  .section {
    position: relative;
    overflow: hidden;
  }

  /* Hero de lujo */
  .hero {
    background: linear-gradient(135deg, var(--dark) 0%, var(--dark-gray) 100%);
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 20%, rgba(255, 215, 0, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(205, 127, 50, 0.03) 0%, transparent 50%);
    animation: shimmer 8s ease-in-out infinite;
  }

  @keyframes shimmer {
    0%, 100% { opacity: 0.5; }
    50% { opacity: 1; }
  }

  .hero-content h1 {
    font-size: clamp(2.8rem, 6vw, 4rem);
    font-weight: 300;
    line-height: 1.1;
    color: var(--gold);
    letter-spacing: -0.01em;
    text-transform: uppercase;
    font-family: 'Georgia', serif;
    position: relative;
    margin-bottom: 1.5rem;
  }

  .hero-content h1::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, var(--gold), var(--bronze));
    animation: slideIn 1s ease-out;
  }

  @keyframes slideIn {
    from { width: 0; opacity: 0; }
    to { width: 60px; opacity: 1; }
  }

  .hero-content p {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    color: var(--light);
    line-height: 1.6;
    font-weight: 300;
    max-width: 500px;
    opacity: 0.9;
    letter-spacing: 0.01em;
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    margin-top: 2.5rem;
  }

  /* Botones de lujo */
  .btn {
    display: inline-flex;
    padding: 1rem 2.5rem;
    font-size: 0.95rem;
    font-weight: 400;
    text-decoration: none;
    border-radius: 0;
    transition: var(--transition);
    border: 1px solid;
    cursor: pointer;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    position: relative;
    overflow: hidden;
    background: transparent;
  }

  .btn--primary {
    background: linear-gradient(45deg, var(--gold), var(--bronze));
    color: var(--dark);
    border-color: var(--gold);
  }

  .btn--primary:hover {
    background: linear-gradient(45deg, var(--gold-light), var(--copper));
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 215, 0, 0.3);
  }

  .btn--primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
    transition: left 0.6s ease;
  }

  .btn--primary:hover::before {
    left: 100%;
  }

  .btn--outline {
    background: transparent;
    color: var(--gold);
    border-color: var(--gold);
  }

  .btn--outline:hover {
    background: var(--gold);
    color: var(--dark);
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(255, 215, 0, 0.2);
  }

  /* TÃ­tulos de secciÃ³n elegantes */
  .section-title {
    font-size: clamp(2.2rem, 5vw, 3rem);
    font-weight: 300;
    color: var(--gold);
    letter-spacing: -0.01em;
    text-transform: uppercase;
    font-family: 'Georgia', serif;
    position: relative;
    margin-bottom: 1rem;
  }

  .section-title::before {
    content: 'â—†';
    color: var(--bronze);
    margin-right: 0.5rem;
    font-size: 0.8em;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 40px;
    height: 1px;
    background: linear-gradient(90deg, var(--gold), transparent);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--gray);
    line-height: 1.6;
    font-weight: 300;
    letter-spacing: 0.02em;
    max-width: 500px;
  }

  /* Estados de focus elegantes */
  .btn:focus-visible {
    outline: 2px solid var(--gold);
    outline-offset: 2px;
  }

  /* Scroll suave premium */
  html {
    scroll-behavior: smooth;
    scroll-padding-top: 2rem;
  }

  /* Efectos de secciÃ³n */
  section:nth-child(even) {
    background: linear-gradient(135deg, var(--light) 0%, #F5F5F5 100%);
  }

  section:nth-child(even) .section-title {
    color: var(--dark);
  }

  section:nth-child(even) .section-title::before {
    color: var(--bronze);
  }

  /* Responsive elegante */
  @media (max-width: 768px) {
    .hero {
      text-align: center;
      min-height: 90vh;
      padding: 0 1rem;
    }

    .hero-content h1::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .hero-buttons {
      justify-content: center;
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }

    .section-title {
      text-align: center;
    }

    .section-title::after {
      left: 50%;
      transform: translateX(-50%);
    }
  }

  @media (max-width: 480px) {
    .hero-content h1 {
      font-size: 2.2rem;
    }

    .hero-content p {
      font-size: 1rem;
    }

    .btn {
      padding: 0.875rem 2rem;
      font-size: 0.9rem;
    }
  }

  /* Animaciones sutiles */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .section > * {
    animation: fadeInUp 0.8s ease-out;
  }

  /* Accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
      transition: none !important;
    }
    
    .hero::before {
      animation: none;
    }
    
    html {
      scroll-behavior: auto;
    }
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    // Scroll suave mejorado
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          const targetPosition = target.getBoundingClientRect().top + window.pageYOffset - 80;
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      });
    });

    // Efecto parallax sutil
    window.addEventListener('scroll', function() {
      const scrolled = window.pageYOffset;
      const hero = document.querySelector('.hero');
      if (hero) {
        hero.style.transform = `translateY(${scrolled * 0.3}px)`;
      }
    });

    // AnimaciÃ³n de tÃ­tulos al hacer scroll
    const observerOptions = {
      threshold: 0.2,
      rootMargin: '0px 0px -50px 0px'
    };

    const titleObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.style.animation = 'fadeInUp 0.8s ease-out forwards';
        }
      });
    }, observerOptions);

    // Observar tÃ­tulos de secciÃ³n
    document.querySelectorAll('.section-title').forEach(title => {
      title.style.opacity = '0';
      titleObserver.observe(title);
    });

    // Efecto de escritura para el tÃ­tulo principal
    const heroTitle = document.querySelector('.hero-content h1');
    if (heroTitle) {
      const text = heroTitle.textContent;
      heroTitle.textContent = '';
      let i = 0;
      
      function typeWriter() {
        if (i < text.length) {
          heroTitle.textContent += text.charAt(i);
          i++;
          setTimeout(typeWriter, 50);
        }
      }
      
      setTimeout(typeWriter, 500);
    }
  });
</script>