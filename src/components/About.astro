<style>
  /* Variables CSS optimizadas y redefinidas localmente para un tono azul/celeste */
  :root {
    --gradient-bg: linear-gradient(to top, #24243e, #302b63, #0f0c29);
    --wave-color-1: rgba(255, 255, 255, 0.05);
    --wave-color-2: rgba(179, 217, 255, 0.08);
    --wave-color-3: rgba(135, 206, 250, 0.07);
    --wave-color-4: rgba(255, 255, 255, 0.03);

    --text-primary: #ffffff;
    --text-secondary: #c6c6c6;
    --text-tertiary: #ffffff;
    
    /* Variables de color espec√≠ficas para esta secci√≥n (Nosotros) */
    --nosotros-accent-color: #00bcd4; /* Un celeste brillante */
    --nosotros-card-bg-transparent: rgba(0, 28, 212, 0.363) /* Fondo transparente con matiz celeste */
    --nosotros-card-border-light: rgba(0, 188, 212, 0.3); /* Borde sutil celeste */
    --nosotros-card-border-dark: rgba(0, 188, 212, 0.1);
    --nosotros-card-glow: 0 0 20px rgba(0, 188, 212, 0.2), 0 0 40px rgba(0, 188, 212, 0.1); /* Sombra celeste */
    --nosotros-card-inner-glow: inset 0 0 10px rgba(255, 255, 255, 0.05); /* Brillo interno blanco */

    --radius: 20px;
    --transition-slow: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
    --section-padding: clamp(2rem, 6vw, 4rem);
  }

  /* Reset y estilos base optimizados */
  .nosotros-section {
    padding: var(--section-padding) 0;
    background: var(--gradient-bg);
    position: relative;
    overflow: hidden;
    isolation: isolate;
  }

  .container {
    position: relative;
    z-index: 2;
    max-width: min(1200px, 90vw);
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  /* Header section */
  .section-header {
    text-align: center;
    margin-bottom: clamp(2rem, 5vw, 3rem);
  }
  
  .section-title {
    font-size: clamp(1.8rem, 4vw, 2.2rem);
    font-weight: 600;
    color: var(--nosotros-accent-color); /* Usar la variable local */
    line-height: 1.2;
    margin-bottom: 1rem;
    letter-spacing: 1px;
    text-shadow: 0 0 10px var(--nosotros-accent-color); /* Usar la variable local */
  }

  .section-subtitle {
    font-size: clamp(1rem, 2.5vw, 1.1rem);
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
  
  /* Contenido principal */
  .nosotros-intro {
    text-align: center;
    max-width: min(800px, 90vw);
    margin: 0 auto clamp(3rem, 6vw, 4rem);
    background: var(--nosotros-card-bg-transparent); /* Usar la variable local */
    backdrop-filter: blur(30px) saturate(1.2);
    border: 1px solid var(--nosotros-card-border-dark); /* Usar la variable local */
    border-radius: var(--radius);
    padding: clamp(2rem, 4vw, 3rem);
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    transition: var(--transition-slow);
    position: relative;
    overflow: hidden;
  }

  .nosotros-intro p {
    font-size: clamp(1rem, 2.2vw, 1.1rem);
    line-height: 1.6;
    color: var(--text-secondary);
  }

  .nosotros-intro strong {
    color: var(--nosotros-accent-color); /* Usar la variable local */
  }

  /* Estilos base para todas las tarjetas */
  .card {
    background: var(--nosotros-card-bg-transparent); /* Usar la variable local */
    backdrop-filter: blur(30px) saturate(1.2);
    border: 1px solid transparent;
    border-radius: var(--radius);
    padding: clamp(1.5rem, 3vw, 2rem);
    text-align: center;
    box-shadow: var(--nosotros-card-glow); /* Usar la variable local */
    transition: var(--transition-slow);
    position: relative;
    overflow: hidden;
    transform: translateY(0) scale(1);
  }

  /* Efecto de borde m√°s sutil */
  .card::before {
    content: '';
    position: absolute;
    inset: -1px;
    border-radius: var(--radius);
    background: linear-gradient(45deg, var(--nosotros-card-border-light), transparent 30%, transparent 70%, var(--nosotros-card-border-light)); /* Usar la variable local */
    background-size: 200% 200%;
    animation: borderGlow 8s linear infinite;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: xor;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    pointer-events: none;
    z-index: -1;
  }
  
  /* Brillo superior permanente */
  .card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 50% 0%, rgba(0, 188, 212, 0.08), transparent 50%); /* Usar el color celeste */
    opacity: 1;
    pointer-events: none;
  }
  
  /* Estilos de √≠conos */
  .card-icon {
    margin-bottom: 1.5rem;
  }
  
  .card-icon > div {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    position: relative;
    box-shadow: 0 0 20px rgba(0, 188, 212, 0.3), var(--nosotros-card-inner-glow); /* Usar el color celeste */
    border: 1px solid rgba(255, 255, 255, 0.15);
    overflow: hidden;
  }
  
  .card-icon > div::before {
    content: '';
    position: absolute;
    inset: -5px;
    background: conic-gradient(from 0deg, transparent 0%, var(--nosotros-accent-color) 10%, transparent 20%, transparent 80%, var(--nosotros-accent-color) 90%, transparent 100%); /* Usar la variable local */
    border-radius: 50%;
    z-index: -1;
    animation: rotate 8s linear infinite;
    filter: blur(1.5px);
    opacity: 0.6;
  }
  
  .mission-card .card-icon > div {
    background: linear-gradient(135deg, rgba(76, 151, 255, 0.7), rgba(0, 188, 212, 0.7)); /* Gradiente de azul a celeste */
  }
  
  .valor-card .card-icon > div {
    background: linear-gradient(135deg, rgba(0, 188, 212, 0.6), rgba(76, 151, 255, 0.6)); /* Gradiente de celeste a azul */
  }

  .icon-handshake::before {
    animation-direction: reverse;
  }

  .icon-lightning::before {
    animation-duration: 6s;
    animation-direction: reverse;
  }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  @keyframes borderGlow {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
  
  /* Contenido del texto */
  .card h3, .card h4 {
    color: var(--text-tertiary);
    font-weight: 600;
    text-shadow: 0 0 8px rgba(255, 255, 255, 0.2);
  }
  
  .card h3 {
    font-size: clamp(1.4rem, 3vw, 1.6rem);
    margin-bottom: 1rem;
  }
  
  .card h4 {
    font-size: clamp(1.2rem, 2.5vw, 1.4rem);
    margin-bottom: 1rem;
    text-shadow: 0 0 6px rgba(255, 255, 255, 0.15);
  }
  
  .card p {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: clamp(1rem, 2vw, 1.1rem);
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Layouts */
  .mission-card-container {
    display: flex;
    justify-content: center;
    margin-bottom: clamp(4rem, 8vw, 6rem);
  }
  
  .mission-card {
    max-width: 500px;
    width: 100%;
  }
  
  .valores-section {
    text-align: center;
  }
  
  .valores-title {
    font-size: clamp(1.6rem, 4vw, 2rem);
    color: var(--nosotros-accent-color); /* Usar la variable local */
    margin-bottom: clamp(2rem, 4vw, 3rem);
    font-weight: 600;
    text-shadow: 0 0 10px var(--nosotros-accent-color); /* Usar la variable local */
  }
  
  .valores-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(min(280px, 100%), 1fr));
    gap: clamp(1.5rem, 3vw, 2rem);
    justify-content: center;
    max-width: 900px;
    margin: 0 auto;
  }
  
  .valor-card {
    min-height: 240px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  /* Animaci√≥n de ondas refinada y con m√°s capas */
  .waves-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
    pointer-events: none;
    filter: blur(5px);
  }

  .wave {
    position: absolute;
    bottom: 0;
    left: -20%;
    width: 140%;
    height: 100%;
    background-color: var(--wave-color-1);
    border-radius: 40%;
    transform-origin: 50% 100%;
    will-change: transform;
    animation: waveMovement 30s infinite ease-in-out alternate;
  }

  .wave.-two {
    background-color: var(--wave-color-2);
    animation-duration: 35s;
    animation-delay: -5s;
    transform: rotate(20deg) scale(1.05);
  }

  .wave.-three {
    background-color: var(--wave-color-3);
    animation-duration: 40s;
    animation-delay: -10s;
    transform: rotate(40deg) scale(1.1);
  }
  
  .wave.-four {
    background-color: var(--wave-color-4);
    animation-duration: 45s;
    animation-delay: -15s;
    transform: rotate(60deg) scale(1.15);
  }

  @keyframes waveMovement {
    0%, 100% {
      transform: rotate(var(--wave-rotate, 0deg)) scale(var(--wave-scale, 1));
    }
    50% {
      transform: rotate(calc(var(--wave-rotate, 0deg) + 5deg)) scale(calc(var(--wave-scale, 1) + 0.02));
    }
  }

  .wave.-one { --wave-rotate: 0deg; --wave-scale: 1; }
  .wave.-two { --wave-rotate: 20deg; --wave-scale: 1.05; }
  .wave.-three { --wave-rotate: 40deg; --wave-scale: 1.1; }
  .wave.-four { --wave-rotate: 60deg; --wave-scale: 1.15; }
  
  /* Animaciones optimizadas con prefers-reduced-motion */
  @media (prefers-reduced-motion: no-preference) {
    [data-animate] {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 0.8s cubic-bezier(0.4, 0, 0.2, 1), transform 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    [data-animate="fade-in-up"] {
        transform: translateY(30px);
    }

    [data-animate="fade-in-scale"] {
        transform: scale(0.8);
    }

    [data-animate].animated {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
    
    [data-animate].animated[data-delay] {
      transition-delay: var(--delay);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .wave { animation: none; opacity: 0.05; transform: none; }
    .card { transition: none; transform: none !important; }
    .card::before, .card::after { animation: none; }
    .card-icon > div::before { animation: none; }
    .nosotros-intro { animation: none; transform: none !important; }
  }

  /* Media queries optimizadas */
  @media (max-width: 768px) {
    .nosotros-section { padding: clamp(1.5rem, 4vw, 2rem) 0; }
    .valores-grid { grid-template-columns: 1fr; max-width: 400px; }
    .valor-card { min-height: 200px; }
  }

  @media (max-width: 480px) {
    .container { padding: 0 1rem; }
    .waves-container { display: none; }
  }

  /* Asegurar distribuci√≥n en desktop */
  @media (min-width: 900px) {
    .valores-grid { grid-template-columns: repeat(3, 1fr); }
  }
</style>

<script>
  // Script optimizado para performance y animaciones
  document.addEventListener('DOMContentLoaded', () => {
    'use strict';
    
    const observerOptions = {
      root: null,
      rootMargin: '50px',
      threshold: 0.15
    };
    
    let observer:any;
    
    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    
    if (!prefersReducedMotion) {
      observer = new IntersectionObserver((entries) => {
        entries.forEach((entry:any) => {
          if (entry.isIntersecting) {
            const delay = entry.target.dataset.delay || '0ms';
            entry.target.style.setProperty('--delay', `${delay}ms`);
            entry.target.classList.add('animated');
            observer.unobserve(entry.target);
          }
        });
      }, observerOptions);
      
      const animatedElements = document.querySelectorAll('[data-animate]');
      animatedElements.forEach(el => observer.observe(el));
    } else {
      const animatedElements = document.querySelectorAll('[data-animate]');
      animatedElements.forEach(el => el.classList.add('animated'));
    }
    
    window.addEventListener('beforeunload', () => {
      if (observer) {
        observer.disconnect();
      }
    });
  });
</script>