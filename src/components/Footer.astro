  .footer-section h4 {
    color: var(--white);
    font-weight: 600;
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
  }

  .footer-section p {
    color: var(--text-medium);
    line-height: 1.6;
    margin-top: 1rem;
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.75rem;
  }
  
  .footer-links a,
  .contact-info li {
    color: var(--text-medium);
    text-decoration: none;
    transition: var(--transition);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-links a:hover {
    color: var(--white);
    transform: translateX(5px);
  }
  
  .contact-info span {
    color: var(--text-medium);
  }
  
  .contact-info a:hover {
    color: var(--primary-blue);
  }

  .material-symbols-rounded {
    font-size: 1.25rem;
  }

  .copyright {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-medium);
  }

