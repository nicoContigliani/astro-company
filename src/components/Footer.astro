    <script>
      // Script corregido sin errores
      document.addEventListener('DOMContentLoaded', function() {
        // Mejorar interacción de enlaces
        var links = document.querySelectorAll('.footer a');
        
        // Función para manejar el touchstart
        function handleTouchStart(event:any) {
          var target = event.currentTarget;
          target.style.transform = 'scale(0.98)';
        }
        
        // Función para manejar el touchend
        function handleTouchEnd(event:any) {
          var target = event.currentTarget;
          target.style.transform = '';
        }
        
        // Función para prevenir clics múltiples
        function handleClick(event:any) {
          var target = event.currentTarget;
          
          if (target.classList.contains('clicked')) {
            event.preventDefault();
            return;
          }
          
          target.classList.add('clicked');
          setTimeout(function() {
            target.classList.remove('clicked');
          }, 1000);
        }
        
        // Aplicar event listeners a todos los enlaces
        for (var i = 0; i < links.length; i++) {
          var link = links[i];
          
          link.addEventListener('touchstart', handleTouchStart, { passive: true });
          link.addEventListener('touchend', handleTouchEnd, { passive: true });
          link.addEventListener('click', handleClick);
        }
      });
    </script>
