---
import { Image } from 'astro:assets';

// Definimos las propiedades que acepta el componente
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  imageSrc: any; // ðŸ‘ˆ Cambiamos el tipo a ImageMetadata
  imageAlt: string;
}

// Extraemos las propiedades
const { title, description, buttonText, buttonLink, imageSrc, imageAlt } = Astro.props;
---

<section class="hero-section">
  <div class="background-blobs">
    <div class="blob blob-one"></div>
    <div class="blob blob-two"></div>
    <div class="blob blob-three"></div>
    <div class="blob blob-four"></div>
  </div>

  <div class="hero-container">
    <div class="hero-image-content">
      <div class="image-frame" id="image-frame-3d">
        <div class="outer-ring"></div>
        <div class="middle-ring"></div>
        <div class="inner-circle">
          <Image src={imageSrc} alt={imageAlt} class="hero-main-image" />
        </div>
      </div>
    </div>
    <div class="hero-text-content">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-description">{description}</p>
      <div class="hero-actions">
        <a href={buttonLink} class="hero-button">
          {buttonText}
        </a>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const imageFrame: any = document.getElementById('image-frame-3d') as HTMLElement | null;
    const heroImageContent = imageFrame?.closest('.hero-image-content') as HTMLElement | null;
    
    if (!imageFrame || !heroImageContent) return;

    const outerRing = imageFrame.querySelector('.outer-ring') as HTMLElement | null;
    const middleRing = imageFrame.querySelector('.middle-ring') as HTMLElement | null;
    const innerCircle = imageFrame.querySelector('.inner-circle') as HTMLElement | null;
    const heroMainImage = imageFrame.querySelector('.hero-main-image') as HTMLElement | null;

    const isMobile = window.matchMedia('(max-width: 992px)').matches;
    
    if (isMobile) {
      [imageFrame, outerRing, middleRing, innerCircle, heroMainImage].forEach(el => {
        if (el) el.style.transition = 'none';
      });
      return;
    }

    let mouseX = 0;
    let mouseY = 0;
    let containerRect: DOMRect | null = null;
    const intensity = 0.5;

    function handleMouseMove(e: MouseEvent) {
      mouseX = e.clientX;
      mouseY = e.clientY;
      if (!containerRect) {
        containerRect = heroImageContent!.getBoundingClientRect();
      }
    }

    function update() {
      if (!containerRect) {
        requestAnimationFrame(update);
        return;
      }

      const centerX = containerRect.left + containerRect.width / 2;
      const centerY = containerRect.top + containerRect.height / 2;
      const deltaX = mouseX - centerX;
      const deltaY = mouseY - centerY;
      
      const rotateY = (deltaX / containerRect.width) * 40;
      const rotateX = (deltaY / containerRect.height) * -40;

      imageFrame.style.transform = `
        perspective(1500px) 
        rotateX(${rotateX * 0.1}deg) 
        rotateY(${rotateY * 0.1}deg)
      `;

      if (outerRing) outerRing.style.transform = `translateZ(-30px) translateX(${deltaX * -0.01 * intensity}px) translateY(${deltaY * -0.01 * intensity}px)`;
      if (middleRing) middleRing.style.transform = `translateZ(0px) translateX(${deltaX * 0.02 * intensity}px) translateY(${deltaY * 0.02 * intensity}px)`;
      if (innerCircle) innerCircle.style.transform = `translateZ(30px) translateX(${deltaX * 0.04 * intensity}px) translateY(${deltaY * 0.04 * intensity}px)`;
      if (heroMainImage) heroMainImage.style.transform = `
        scale(1.05)
        translateZ(50px)
        translateX(${deltaX * 0.08 * intensity}px)
        translateY(${deltaY * 0.08 * intensity}px)
        rotateY(${-rotateY * 0.05}deg)
        rotateX(${rotateX * 0.05}deg)
      `;
      
      requestAnimationFrame(update);
    }

    function resetTransformations() {
      imageFrame.style.transform = `perspective(1500px) rotateX(0deg) rotateY(0deg)`;
      if (outerRing) outerRing.style.transform = `translateZ(-30px) translateX(0) translateY(0)`;
      if (middleRing) middleRing.style.transform = `translateZ(0px) translateX(0) translateY(0)`;
      if (innerCircle) innerCircle.style.transform = `translateZ(30px) translateX(0) translateY(0)`;
      if (heroMainImage) heroMainImage.style.transform = `
        scale(1.05)
        translateZ(50px)
        translateX(0)
        translateY(0)
        rotateY(0deg)
        rotateX(0deg)
      `;
    }

    heroImageContent.addEventListener('mousemove', handleMouseMove);
    heroImageContent.addEventListener('mouseleave', resetTransformations);
    
    requestAnimationFrame(update);
    resetTransformations();
  });
</script>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

  :root {
    --primary-text-color: #0d1e3d;
    --secondary-text-color: #5d6d7e;
    --white: #ffffff;
    --hero-bg-start: #f7f8f9;
    --hero-bg-end: #f0f3f6;
    --outer-glow-color: rgba(255, 255, 255, 0.9);
    --outer-ring-bg: #ffffff;
    --outer-ring-shadow-color: rgba(0, 0, 0, 0.08);
    --middle-ring-bg-start: #ff8c00;
    --middle-ring-bg-end: #ffa500;
    --middle-ring-shadow-inner: rgba(204, 82, 0, 0.4);
    --middle-ring-shadow-outer: rgba(244, 128, 36, 0.3);
    --inner-circle-bg-start: #ff7d19;
    --inner-circle-bg-end: #e44147;
    --inner-circle-shadow-inner: rgba(200, 50, 0, 0.9);
    --inner-circle-shadow-outer: rgba(255, 87, 34, 0.4);
    --button-bg-start: #ff8c00;
    --button-bg-end: #ff5e00;
    --button-hover-start: #e67d00;
    --button-hover-end: #e64d00;
    --title-gradient-start: #10b981;
    --title-gradient-end: #06b6d4;
    --blob-purple: rgba(167, 139, 250, 0.3);
    --blob-pink: rgba(244, 114, 182, 0.25);
    --blob-green: rgba(52, 211, 153, 0.25);
    --blob-yellow: rgba(251, 191, 36, 0.3);
    --energy-wave-color-start: rgba(255, 255, 255, 0.7);
    --energy-wave-color-end: rgba(255, 255, 255, 0);
    --energy-shadow-color-start: rgba(255, 255, 255, 0.8);
    --energy-shadow-color-middle: rgba(255, 165, 0, 0.6);
    --energy-shadow-color-end: rgba(255, 87, 34, 0.4);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /*
  *
  * GENERAL
  *
  */

  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(to top, #24243e, #302b63, #0f0c29);
    
    padding: 1rem 2rem ;
    /* padding-top: 1%; */
  }

  .hero-container {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    width: 100%;
    gap: 4rem;
    position: relative;
    z-index: 10;
    padding: 0 2rem;
  }

  .hero-text-content {
    flex: 1 1 45%;
    max-width: 550px;
    text-align: left;
    order: 2;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5.5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    background: linear-gradient(135deg, var(--title-gradient-start), var(--title-gradient-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: 1px 1px 5px rgba(0, 0, 0, 0.05);
  }

  .hero-description {
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--secondary-text-color);
    margin-bottom: 2.5rem;
  }

  .hero-button {
    display: inline-flex;
    padding: 0.875rem 2rem;
    background: linear-gradient(135deg, var(--button-bg-start), var(--button-bg-end));
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    border-radius: 50px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(249, 115, 22, 0.3);
  }

  .hero-button:hover {
    background: linear-gradient(135deg, var(--button-hover-start), var(--button-hover-end));
    transform: translateY(-2px) scale(1.01);
    box-shadow: 0 8px 25px rgba(249, 115, 22, 0.4);
  }

  /*
  *
  * IMAGE SECTION
  *
  */

  .hero-image-content {
    flex: 1 1 45%;
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 300px;
    order: 1;
    position: relative;
    z-index: 5;
  }

  .image-frame {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 350px;
    height: 350px;
    max-width: 80vw;
    max-height: 80vw;
    transform-style: preserve-3d;
    transition: transform 0.5s ease-out;
    will-change: transform;
  }

  .outer-ring,
  .middle-ring,
  .inner-circle,
  .hero-main-image {
    transition: transform 0.2s ease-out;
    will-change: transform;
  }

  .outer-ring {
    position: absolute;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: transparent;
    z-index: 1;
    box-shadow: 0 0 0 4px rgba(255, 255, 255, 0.7), 0 0 20px 8px rgba(255, 165, 0, 0.1);
    transform: translateZ(-30px);
  }

  .outer-ring::before,
  .outer-ring::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: radial-gradient(circle at center, var(--energy-wave-color-start) 0%, var(--energy-wave-color-end) 70%);
    box-shadow: 0 0 10px 5px var(--energy-shadow-color-start);
    transform: scale(0.5) translateZ(-10px);
    opacity: 0;
    animation: pulse-energy-wave 3.5s cubic-bezier(0.25, 0.46, 0.45, 0.94) infinite;
  }

  .outer-ring::after {
    animation-delay: 1.75s;
  }

  @keyframes pulse-energy-wave {
    0% {
      transform: scale(0.4) translateZ(-10px);
      opacity: 0.8;
      box-shadow: 0 0 15px 8px var(--energy-shadow-color-start), 0 0 30px 15px var(--energy-shadow-color-middle);
    }
    50% {
      transform: scale(1.1) translateZ(0px);
      opacity: 0.4;
      box-shadow: 0 0 25px 12px var(--energy-shadow-color-middle), 0 0 50px 25px var(--energy-shadow-color-end);
    }
    100% {
      transform: scale(1.6) translateZ(10px);
      opacity: 0;
      box-shadow: 0 0 60px 30px rgba(255, 255, 255, 0);
      filter: blur(8px);
    }
  }

  .middle-ring {
    position: absolute;
    width: calc(100% - 40px);
    height: calc(100% - 40px);
    border-radius: 50%;
    background: linear-gradient(135deg, var(--middle-ring-bg-start), var(--middle-ring-bg-end));
    z-index: 2;
    transform: translateZ(0px);
    box-shadow: inset 0 4px 8px rgba(0,0,0,0.1), inset 0 0 15px 5px rgba(255, 255, 255, 0.6), 0 4px 10px rgba(255, 152, 0, 0.3), 0 0 20px 5px rgba(255, 255, 255, 0.2);
  }

  .inner-circle {
    position: absolute;
    width: calc(100% - 80px);
    height: calc(100% - 80px);
    border-radius: 50%;
    background: linear-gradient(135deg, var(--inner-circle-bg-start), var(--inner-circle-bg-end));
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 3;
    transform: translateZ(30px);
    box-shadow: inset 0 6px 12px rgba(0, 0, 0, 0.4), 0 0 25px rgba(255, 87, 34, 0.5), 0 0 35px 10px rgba(255, 255, 255, 0.3);
  }

  .hero-main-image {
    width: 150%;
    height: 150%;
    object-fit: contain;
    z-index: 4;
    transform: scale(1.05) translateZ(50px);
    filter: brightness(1.1) contrast(1.1) drop-shadow(0 0 8px rgba(255, 255, 255, 0.8)) drop-shadow(0 0 16px rgba(255, 193, 7, 0.6)) drop-shadow(0 0 24px rgba(255, 87, 34, 0.4));
  }
  
  /*
  *
  * BACKGROUND BLOBS
  *
  */

  .background-blobs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
    pointer-events: none;
  }

  .blob {
    position: absolute;
    filter: blur(120px);
    animation: organic-flow 60s infinite ease-in-out;
    opacity: 0.8;
  }

  .blob-one {
    width: 280px;
    height: 320px;
    top: -8%;
    left: -12%;
    background: var(--blob-purple);
    border-radius: 60% 40% 30% 70% / 60% 30% 70% 40%;
    animation-delay: 0s;
    animation-duration: 65s;
  }

  .blob-two {
    width: 350px;
    height: 380px;
    bottom: -12%;
    right: -10%;
    background: var(--blob-pink);
    border-radius: 30% 70% 60% 40% / 40% 60% 30% 70%;
    animation-delay: 15s;
    animation-duration: 70s;
  }

  .blob-three {
    width: 200px;
    height: 240px;
    top: 20%;
    right: 15%;
    background: var(--blob-green);
    border-radius: 70% 30% 40% 60% / 30% 70% 60% 40%;
    animation-delay: 30s;
    animation-duration: 55s;
  }

  .blob-four {
    width: 320px;
    height: 280px;
    bottom: 15%;
    left: 8%;
    background: var(--blob-yellow);
    border-radius: 40% 60% 70% 30% / 70% 40% 30% 60%;
    animation-delay: 45s;
    animation-duration: 75s;
  }

  @keyframes organic-flow {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    20% {
      transform: translate(-8px, -12px) scale(1.05);
    }
    40% {
      transform: translate(12px, 8px) scale(0.95);
    }
    60% {
      transform: translate(-5px, 15px) scale(1.02);
    }
    80% {
      transform: translate(10px, -10px) scale(0.98);
    }
  }

  /*
  *
  * RESPONSIVE
  *
  */

  @media (max-width: 992px) {
    .hero-container {
      flex-direction: column-reverse;
      text-align: center;
      gap: 3rem;
    }

    .hero-text-content {
      max-width: 100%;
      order: 1;
    }

    .hero-image-content {
      order: 2;
    }

    .image-frame {
      width: 280px;
      height: 280px;
      transform: none !important;
    }

    .outer-ring,
    .middle-ring,
    .inner-circle,
    .hero-main-image {
      transform: none !important;
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 0.5rem;
    }

    .image-frame {
      width: 240px;
      height: 240px;
    }

    .hero-button {
      width: 100%;
      max-width: 280px;
    }
  }
</style>