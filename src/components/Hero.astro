---
// Definimos las propiedades que acepta el componente
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonLink: string;
  imageSrc: string;
  imageAlt: string;
}

// Extraemos las propiedades
const { title, description, buttonText, buttonLink, imageSrc, imageAlt } =
  Astro.props;
---

<section class="hero-section">
  <div class="background-blobs">
    <div class="blob blob-one"></div>
    <div class="blob blob-two"></div>
    <div class="blob blob-three"></div>
    <div class="blob blob-four"></div>
  </div>

  <div class="hero-container">
    <div class="hero-text-content">
      <h1 class="hero-title">{title}</h1>
      <p class="hero-description">{description}</p>
      <div class="hero-actions">
        <a href={buttonLink} class="hero-button">
          {buttonText}
        </a>
      </div>
    </div>
    <div class="hero-image-content">
      <img src={imageSrc} alt={imageAlt} class="hero-main-image fire-effect" />
    </div>
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

  :root {
    --primary-text-color: #2c2c2e;
    --secondary-text-color: #555555;
    --accent-color: #007bff;
    --accent-hover: #0056b3;
    --white: #ffffff;
    --bg-light: #f9fafb;
    --shadow-subtle: 0 4px 12px rgba(0, 0, 0, 0.05);
    --shadow-medium: 0 8px 25px rgba(0, 0, 0, 0.01);

    /* Colores para los blobs, inspirados en el diseÃ±o de Globant */
    --blob-color-1: #e0ffb3;
    --blob-color-2: #c2f0f0;
    --blob-color-3: #b3d9ff;
    --blob-color-4: #ffe0b3;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Inter", sans-serif;
    background-color: var(--white);
    color: var(--primary-text-color);
  }

  /* --- SecciÃ³n principal del Hero --- */
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background-color: var(--white);
    padding: 4rem 1rem;
    padding-top: 8rem;
  }

  .hero-container {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    max-width: 1200px;
    width: 100%;
    gap: 4rem;
    position: relative;
    z-index: 10;
    padding: 0 2rem;
  }

  .hero-text-content {
    flex: 1 1 45%;
    max-width: 550px;
    text-align: left;
    padding-right: 2rem;
  }

  .hero-title {
    font-size: clamp(2.8rem, 5.5vw, 4rem);
    font-weight: 700;
    line-height: 1.15;
    color: var(--primary-text-color);
    margin-bottom: 1.5rem;
    background: linear-gradient(90deg, #007bff, #0056b3);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-description {
    font-size: 1.15rem;
    line-height: 1.6;
    color: var(--secondary-text-color);
    margin-bottom: 2.5rem;
  }

  .hero-actions {
    margin-top: 1.5rem;
  }

  .hero-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 1rem 2.5rem;
    background: linear-gradient(
      45deg,
      var(--accent-color),
      var(--accent-hover)
    );
    color: var(--white);
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 50px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0, 123, 255, 0.2);
  }

  .hero-button:hover {
    background: linear-gradient(
      45deg,
      var(--accent-hover),
      var(--accent-color)
    );
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 123, 255, 0.3);
  }

  .hero-image-content {
    flex: 1 1 45%;
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 300px;
  }

  .hero-main-image {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 1rem;
    transition: transform 0.3s ease-in-out;
    position: relative;
    z-index: 2;
  }

  /* ðŸ”¥ EFECTO DE FUEGO ELEGANTE MEJORADO */
  .fire-effect {
    filter: 
      drop-shadow(0 0 20px rgba(255, 100, 0, 0.6))
      drop-shadow(0 0 40px rgba(255, 50, 0, 0.4))
      drop-shadow(0 0 60px rgba(255, 0, 0, 0.2));
    animation: elegant-fire 3s ease-in-out infinite;
  }

  @keyframes elegant-fire {
    0%, 100% {
      filter: 
        drop-shadow(0 0 15px rgba(255, 120, 0, 0.5))
        drop-shadow(0 0 35px rgba(255, 60, 0, 0.3))
        drop-shadow(0 0 55px rgba(255, 20, 0, 0.15));
    }
    25% {
      filter: 
        drop-shadow(0 0 20px rgba(255, 140, 0, 0.6))
        drop-shadow(0 0 45px rgba(255, 80, 0, 0.4))
        drop-shadow(0 0 65px rgba(255, 40, 0, 0.25));
    }
    50% {
      filter: 
        drop-shadow(0 0 25px rgba(255, 160, 0, 0.7))
        drop-shadow(0 0 50px rgba(255, 100, 0, 0.5))
        drop-shadow(0 0 75px rgba(255, 60, 0, 0.3));
    }
    75% {
      filter: 
        drop-shadow(0 0 20px rgba(255, 140, 0, 0.6))
        drop-shadow(0 0 45px rgba(255, 80, 0, 0.4))
        drop-shadow(0 0 65px rgba(255, 40, 0, 0.25));
    }
  }

  .hero-main-image:hover {
    transform: scale(1.02);
    animation-duration: 1.5s;
  }

  /* --- Estilos de los "blobs" de fondo (manchas de color) --- */
  .background-blobs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
    pointer-events: none;
    opacity: 0.8;
  }

  .blob {
    position: absolute;
    border-radius: 40% 60% 70% 30% / 30% 70% 30% 70%;
    filter: blur(100px);
    animation: floating-blob 30s infinite ease-in-out;
    opacity: 0.7;
  }

  .blob-one {
    width: 50vw;
    height: 50vw;
    top: -10%;
    right: -20%;
    background-color: var(--blob-color-1);
    animation-duration: 32s;
    animation-delay: 0s;
  }

  .blob-two {
    width: 60vw;
    height: 60vw;
    bottom: -20%;
    left: -10%;
    background-color: var(--blob-color-2);
    animation-duration: 38s;
    animation-delay: 3s;
    border-radius: 30% 70% 50% 50% / 60% 40% 60% 40%;
  }

  .blob-three {
    width: 40vw;
    height: 40vw;
    top: 30%;
    left: 20%;
    background-color: var(--blob-color-3);
    animation-duration: 45s;
    animation-delay: 6s;
    border-radius: 50% 50% 30% 70% / 70% 30% 70% 30%;
  }

  .blob-four {
    width: 55vw;
    height: 55vw;
    top: 70%;
    right: 15%;
    background-color: var(--blob-color-4);
    animation-duration: 30s;
    animation-delay: 9s;
    border-radius: 60% 40% 60% 40% / 40% 60% 40% 60%;
  }

  @keyframes floating-blob {
    0% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(-5%, -5%) scale(1.03);
    }
    66% {
      transform: translate(5%, 5%) scale(0.97);
    }
    100% {
      transform: translate(0, 0) scale(1);
    }
  }

  /* --- Responsive --- */
  @media (max-width: 992px) {
    .hero-container {
      flex-direction: column;
      text-align: center;
      gap: 3rem;
    }

    .hero-text-content {
      padding-right: 0;
      max-width: 100%;
    }

    .hero-title {
      font-size: clamp(2.2rem, 6vw, 3.5rem);
    }

    .hero-description {
      font-size: 1.1rem;
    }

    .hero-actions {
      display: flex;
      justify-content: center;
    }

    .hero-main-image {
      max-width: 80%;
    }
  }

  @media (max-width: 768px) {
    .hero-section {
      padding: 3rem 0.5rem;
      padding-top: 7rem;
    }

    .hero-title {
      font-size: clamp(1.8rem, 6vw, 2.5rem);
    }

    .hero-description {
      font-size: 1rem;
    }

    .hero-button {
      width: 100%;
      max-width: 280px;
    }

    .fire-effect {
      filter: 
        drop-shadow(0 0 15px rgba(255, 100, 0, 0.5))
        drop-shadow(0 0 30px rgba(255, 50, 0, 0.3))
        drop-shadow(0 0 45px rgba(255, 0, 0, 0.15));
    }
  }

  @media (max-width: 480px) {
    .hero-title {
      font-size: 1.5rem;
    }
    
    .fire-effect {
      filter: 
        drop-shadow(0 0 10px rgba(255, 100, 0, 0.4))
        drop-shadow(0 0 25px rgba(255, 50, 0, 0.2));
    }
  }
</style>