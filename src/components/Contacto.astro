<section id="contacto" class="contact-section">
  <div class="container">
    <div class="contact-content">
      <div class="contact-header">
        <span class="contact-subtitle">Ponte en contacto</span>
        <h2 class="contact-title">Hablemos de tu próximo proyecto</h2>
        <p class="contact-description">
          ¿Listo para dar el siguiente paso? Contáctanos a través de nuestros canales y te responderemos a la brevedad.
        </p>
      </div>

      <div class="contact-methods">
        <a href="https://wa.me/5491122334455" target="_blank" class="contact-button whatsapp-button">
          <svg class="contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/>
          </svg>
          WhatsApp
        </a>
        
        <a href="mailto:info@companiesall.com" class="contact-button email-button">
          <svg class="contact-icon" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
          </svg>
          Correo
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  /* Variables CSS optimizadas */
  :root {
    --primary-blue: #007aff;
    --primary-blue-dark: #0056b3;
    --whatsapp-green: #25D366;
    --whatsapp-green-dark: #128C7E;
    --white: #ffffff;
    --bg-light: #f9fafb;
    --bg-card: #ffffff;
    --text-dark: #1c1c1e;
    --text-medium: #8e8e93;
    --border-color: #e0e0e0;
    --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.08);
    --shadow-medium: 0 6px 20px rgba(0, 0, 0, 0.12);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Estilos base */
  .contact-section {
    padding: clamp(4rem, 8vw, 8rem) 0;
    background-color: var(--bg-light);
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }

  .container {
    max-width: min(1200px, 90vw);
    margin: 0 auto;
    padding: 0 clamp(1rem, 3vw, 2rem);
  }

  /* Estructura del contenido */
  .contact-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: clamp(2rem, 5vw, 4rem);
  }

  .contact-header {
    text-align: center;
    max-width: min(600px, 90vw);
  }

  .contact-subtitle {
    font-size: clamp(0.9rem, 2vw, 1.1rem);
    font-weight: 500;
    color: var(--primary-blue);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: block;
    margin-bottom: 0.5rem;
  }

  .contact-title {
    font-size: clamp(2.5rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--text-dark);
    line-height: 1.2;
    margin-bottom: 1rem;
  }

  .contact-description {
    font-size: clamp(1.1rem, 2vw, 1.25rem);
    color: var(--text-medium);
    line-height: 1.6;
  }

  /* Botones de contacto */
  .contact-methods {
    display: flex;
    gap: clamp(1rem, 3vw, 1.5rem);
    flex-wrap: wrap;
    justify-content: center;
  }

  .contact-button {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    font-size: clamp(0.9rem, 2vw, 1rem);
    padding: clamp(0.875rem, 2vw, 1rem) clamp(1.5rem, 3vw, 2rem);
    border-radius: 50px;
    transition: var(--transition);
    box-shadow: var(--shadow-light);
    border: 1px solid transparent;
    min-width: fit-content;
  }

  .contact-icon {
    width: clamp(20px, 3vw, 24px);
    height: clamp(20px, 3vw, 24px);
    flex-shrink: 0;
  }

  /* Estilos específicos de botones */
  .whatsapp-button {
    background-color: var(--whatsapp-green);
    color: var(--white);
  }

  .whatsapp-button:hover {
    background-color: var(--whatsapp-green-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.3);
  }

  .email-button {
    background-color: var(--bg-card);
    color: var(--primary-blue);
    border-color: var(--border-color);
  }

  .email-button:hover {
    background-color: var(--bg-light);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 122, 255, 0.1);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-methods {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }
    
    .contact-button {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .contact-section {
      padding: 3rem 0;
    }
    
    .contact-content {
      gap: 2rem;
    }
    
    .contact-title {
      font-size: 2rem;
    }
    
    .contact-description {
      font-size: 1rem;
    }
  }

  /* Mejoras de accesibilidad */
  @media (prefers-reduced-motion: reduce) {
    .contact-button {
      transition: none;
    }
    
    .contact-button:hover {
      transform: none;
    }
  }

  .contact-button:focus {
    outline: 2px solid var(--primary-blue);
    outline-offset: 2px;
  }

  .whatsapp-button:focus {
    outline-color: var(--whatsapp-green-dark);
  }
</style>

<script>
  // Script corregido sin errores de TypeScript
  document.addEventListener('DOMContentLoaded', function() {
    // Mejorar interacción de botones
    var buttons = document.querySelectorAll('.contact-button');
    
    buttons.forEach(function(button) {
      // Feedback táctil para móviles - versión corregida
      button.addEventListener('touchstart', function(event) {
        var target = event.currentTarget;
        if (target instanceof HTMLElement) {
          target.style.transform = 'scale(0.98)';
        }
      });
      
      button.addEventListener('touchend', function(event) {
        var target = event.currentTarget;
        if (target instanceof HTMLElement) {
          target.style.transform = '';
        }
      });
      
      button.addEventListener('touchcancel', function(event) {
        var target = event.currentTarget;
        if (target instanceof HTMLElement) {
          target.style.transform = '';
        }
      });
    });
  });
</script>