</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
  @import url('https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200');
  
  :root {
    --primary-blue: #007aff;
    --primary-blue-dark: #0056b3;
    --whatsapp-green: #25D366;
    --whatsapp-green-dark: #128C7E;
    --bg-light: #f9fafb;
    --bg-card: #ffffff;
    --text-dark: #1c1c1e;
    --text-medium: #8e8e93;
    --border-color: #e0e0e0;
    --shadow-light: 0 4px 15px rgba(0, 0, 0, 0.08);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  /* Estilos de la sección */
  .contact-section {
    padding: 8rem 0;
    background-color: var(--bg-light);
    font-family: 'Inter', sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .contact-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4rem;
  }

  .contact-header {
    text-align: center;
    max-width: 600px;
  }

  .contact-subtitle {
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--primary-blue);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    display: block;
    margin-bottom: 0.5rem;
  }

  .contact-title {
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-dark);
    letter-spacing: -0.05rem;
    margin-bottom: 1rem;
  }

  .contact-description {
    font-size: 1.25rem;
    color: var(--text-medium);
    line-height: 1.6;
  }

  /* Botones de contacto */
  .contact-methods {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .contact-button {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    font-weight: 600;
    padding: 1rem 2rem;
    border-radius: 50px;
    transition: var(--transition);
    box-shadow: var(--shadow-light);
  }

  .contact-button .material-symbols-rounded {
    font-size: 1.5rem;
  }

  .whatsapp-button {
    background-color: var(--whatsapp-green);
    color: var(--white);
  }

  .whatsapp-button:hover {
    background-color: var(--whatsapp-green-dark);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(37, 211, 102, 0.3);
  }

  .email-button {
    background-color: var(--bg-card);
    color: var(--primary-blue);
    border: 1px solid var(--border-color);
  }

  .email-button:hover {
    background-color: var(--bg-light);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 122, 255, 0.1);
  }

  /* Redes sociales */
  .social-media {
    text-align: center;
    margin-top: 2rem;
  }

  .social-media h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 1.5rem;
  }

  .social-icons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .social-icons a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: var(--bg-card);
    color: var(--text-medium);
    transition: var(--transition);
    box-shadow: var(--shadow-light);
  }

  .social-icons a:hover {
    color: var(--primary-blue);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }
  
  .social-icons .material-symbols-rounded {
    font-size: 1.5rem;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .contact-title {
      font-size: 2.5rem;
    }
    .contact-methods {
      flex-direction: column;
    }
  }
</style>